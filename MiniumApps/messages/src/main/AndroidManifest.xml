<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="minium.co.messages">

    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!--
    On SDK version 23 and up, your app data will be automatically backed up and restored on app install.
    Consider adding the attribute `android:fullBackupContent` to specify an `@xml` resource
    which configures which files to backup.
    More info: https://developer.android.com/preview/backup/index.html
    -->

    <application
        android:name=".app.App_"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/CoreTheme">

        <!-- Fabric configuration -->
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="3a18ba28dbf20cf77b809a2a21ad29d0593404a2" />

        <activity android:name=".ui.MainActivity_"
                  android:launchMode="singleTask"
                  android:windowSoftInputMode="stateUnchanged|adjustResize">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.SEND" />
                <action android:name="android.intent.action.SENDTO" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.MULTIWINDOW_LAUNCHER" />

                <data android:scheme="sms" />
                <data android:scheme="smsto" />
                <data android:scheme="mms" />
                <data android:scheme="mmsto" />
                <data android:scheme="sms_body" />
            </intent-filter>
        </activity>

    </application>

</manifest>
