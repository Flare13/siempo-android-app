<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/rowLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="top"
    android:minHeight="72dp"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ImageView
        android:id="@+id/selected"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="@dimen/text.size.large"
                fontPath="@string/fonts.noto.sans.bold"
                tools:text="Contact Name" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:minWidth="16dp" />

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text.size.regular"
                tools:text="4:41PM" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:gravity="top">

            <TextView
                android:id="@+id/txtMsg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:ellipsize="end"
                android:layout_weight="1"
                android:lines="1"
                android:singleLine="true"
                android:textSize="@dimen/text.size.regular"
                tools:text="Hey! This is a test message. I'm just making this longer now" />

            <LinearLayout
                android:id="@+id/badgesLayout"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/badgeMuted"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/badgeError"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/badgeUnread"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>