<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:orientation="horizontal"
    style="?android:buttonBarStyle" android:background="@color/black"
    tools:context=".ui.BottomFragment">

    <Button android:id="@+id/btn1" android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="1" style="?android:attr/borderlessButtonStyle"
        android:textColor="@color/white" tools:text="CALL" />

    <Button android:id="@+id/btn2" android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="1" style="?android:attr/borderlessButtonStyle"
        android:textColor="@color/white" tools:text="SELECT" />

    <Button android:id="@+id/btn3" android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="1" style="?android:attr/borderlessButtonStyle"
        android:textColor="@color/white" tools:text="MESSAGES" />

</LinearLayout>
