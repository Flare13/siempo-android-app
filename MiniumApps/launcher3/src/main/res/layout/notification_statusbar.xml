<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="@android:color/white"
    >

    <ImageView
        android:id="@+id/imgNotification"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@drawable/system_notification"
        android:padding="6dp"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:contentDescription="@null" />

    <ImageView
        android:id="@+id/imgTempo"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@drawable/system_tempo"
        android:padding="6dp"
        android:layout_toEndOf="@id/imgNotification"
        android:visibility="gone"
        android:contentDescription="@null"
         />

    <ImageView
        android:id="@+id/imgBattery"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@drawable/system_battery"
        android:padding="6dp"
        android:layout_alignParentEnd="true"
        android:contentDescription="@null" />

    <ImageView
        android:id="@+id/imgSignal"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@drawable/system_reception"
        android:padding="6dp"
        android:layout_toStartOf="@id/imgBattery"
        android:contentDescription="@null" />

    <ImageView
        android:id="@+id/imgWifi"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:padding="6dp"
        android:src="@drawable/ic_wifi_0"
        android:layout_toStartOf="@id/imgSignal"
        android:visibility="gone"
        android:contentDescription="@null" />

    <ImageView
        android:id="@+id/imgAirplane"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@drawable/ic_airplane"
        android:padding="6dp"
        android:layout_toStartOf="@id/imgWifi"
        android:contentDescription="@null"
        />

    <TextClock
        android:id="@+id/iTxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="@dimen/text.size.large"
        android:fontFamily="sans-serif"
        android:textColor="#b3000000"
        />

</RelativeLayout>




<RelativeLayout
android:layout_width="match_parent"
android:background="#00FFFFFF"
android:id="@+id/layout_notification"
android:visibility="gone"

android:orientation="vertical"
android:clickable="true"
android:layout_height="match_parent" >

<ImageView
    android:id="@+id/img_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_alignParentTop="true"
    android:layout_below="@+id/topmost"
    android:layout_marginBottom="50dp"
    android:background="@android:color/transparent"
    android:orientation="vertical"></ImageView>

<LinearLayout
    android:id="@+id/topmost"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_marginBottom="100dp"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <RelativeLayout
                android:id="@+id/relNotificationWifi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dp_10">

                <ImageView
                    android:id="@+id/imgNotificationWifi"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_signal_wifi_off_black_24dp"
                    android:padding="@dimen/dp_15" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relNotificationMobileData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dp_10">

                <ImageView
                    android:id="@+id/imgNotificationData"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_data_on_black_24dp"
                    android:padding="@dimen/dp_15" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relNotificationBle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dp_10">

                <ImageView
                    android:id="@+id/imgNotificationBle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_bluetooth_disabled_black_24dp"
                    android:gravity="center"
                    android:padding="@dimen/dp_15" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relNotificationDND"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dp_10">

                <ImageView
                    android:id="@+id/imgNotificationDnd"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_do_not_disturb_off_black_24dp"
                    android:padding="@dimen/dp_15" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relNotificationAirPlane"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dp_10">

                <ImageView
                    android:id="@+id/imgNotificationAirplane"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_airplanemode_inactive_black_24dp"
                    android:padding="@dimen/dp_15" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relNotificationFlash"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dp_10">

                <ImageView
                    android:id="@+id/imgNotificationFlash"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_flash_off_black_24dp"
                    android:padding="@dimen/dp_15" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relNotificationBrightness"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dp_10">

                <ImageView
                    android:id="@+id/imgNotificationBrightness"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_brightness_off_black_24dp"
                    android:padding="@dimen/dp_15"/>
            </RelativeLayout>

        </LinearLayout>

        <SeekBar
            android:visibility="gone"
            android:id="@+id/seekbarBrightness"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:thumb="@drawable/ic_brightness_on_black_24dp"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            />

        <TextView
            android:id="@+id/textView_notification_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:text="@string/string_notification_title"
            android:textColor="#de000000"
            android:textSize="28sp"
            />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:clipToPadding="false"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:text="@string/msg.notificationEmpty"
        android:textSize="@dimen/text.size.medium"
        android:visibility="visible"
        />
</LinearLayout>

</RelativeLayout>


</LinearLayout>