<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:id="@+id/statusView"
        android:layout_width="match_parent"
        android:layout_height="27dp" />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/statusView"
        android:layout_marginBottom="54dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Manage Notification"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/linSocial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:gravity="left"
                        android:padding="@dimen/dp_5"
                        android:text="Social Media"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray" />

                <RelativeLayout
                    android:id="@+id/relFacebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:paddingRight="5dp"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/icon_AllowNotificationFacebook"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="15dp"
                        android:contentDescription="@null"
                        android:padding="6dp" />

                    <TextView
                        android:id="@+id/txt_AllownotificationFacebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="15dp"
                        android:layout_toLeftOf="@+id/switch_AllowNotificationFacebook"
                        android:layout_toRightOf="@+id/icon_AllowNotificationFacebook"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="3"
                        android:text="Facebook"
                        android:textSize="14sp" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/switch_AllowNotificationFacebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center_vertical"
                        android:textOff=""
                        android:textOn="" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:gravity="left"
                    android:padding="@dimen/dp_5"
                    android:text="Messengers"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray" />

            <RelativeLayout
                android:id="@+id/relMessenger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:paddingRight="5dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/icon_AllowNotificationMessenger"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:contentDescription="@null"
                    android:padding="6dp" />

                <TextView
                    android:id="@+id/txt_AllownotificationMessenger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_toLeftOf="@+id/switch_AllowNotificationMessenger"
                    android:layout_toRightOf="@+id/icon_AllowNotificationMessenger"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="3"
                    android:text="Messenger"
                    android:textSize="14sp" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switch_AllowNotificationMessenger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center_vertical"
                    android:textOff=""
                    android:textOn="" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relLite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:paddingRight="5dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/icon_AllowNotificationLite"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:contentDescription="@null"
                    android:padding="6dp" />

                <TextView
                    android:id="@+id/txt_AllownotificationLite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_toLeftOf="@+id/switch_AllowNotificationLite"
                    android:layout_toRightOf="@+id/icon_AllowNotificationLite"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="3"
                    android:text="Facebook Lite"
                    android:textSize="14sp" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switch_AllowNotificationLite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center_vertical"
                    android:textOff=""
                    android:textOn="" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relWhatsApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:paddingRight="5dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/icon_AllowNotificationWhatsApp"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:contentDescription="@null"
                    android:padding="6dp" />

                <TextView
                    android:id="@+id/txt_AllownotificationWhatsApp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_toLeftOf="@+id/switch_AllowNotificationWhatsApp"
                    android:layout_toRightOf="@+id/icon_AllowNotificationWhatsApp"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="3"
                    android:text="WhatsApp"
                    android:textSize="14sp" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switch_AllowNotificationWhatsApp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center_vertical"
                    android:textOff=""
                    android:textOn="" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relHangOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:paddingRight="5dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/icon_AllowNotificationHangout"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:contentDescription="@null"
                    android:padding="6dp" />

                <TextView
                    android:id="@+id/txt_AllownotificationHangout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_toLeftOf="@+id/switch_AllowNotificationHangout"
                    android:layout_toRightOf="@+id/icon_AllowNotificationHangout"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="3"
                    android:text="Hangouts"
                    android:textSize="14sp" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switch_AllowNotificationHangout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center_vertical"
                    android:textOff=""
                    android:textOn="" />
            </RelativeLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
