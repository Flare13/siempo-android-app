<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_permissionscreen"
    tools:context=".activities.EmailRequestActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/cardCenter"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/siempo_logo" />

            <co.siempo.phone.customviews.RobotoMediumTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/imgLogo"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/let_s_get_started"
                android:textColor="@color/dialog_blue"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/cardCenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#F7F7F7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingTop="16dp">


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/inputEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/TextLabel">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/auto_mail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/your_email_address"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/dialog_title"
                            android:textSize="@dimen/sp_16" />

                    </android.support.design.widget.TextInputLayout>

                    <co.siempo.phone.customviews.RobotoRegularTextView
                        android:id="@+id/txtErrorMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_1"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_3"
                        android:paddingRight="@dimen/dp_3"
                        android:text="@string/error_email"
                        android:textColor="#FF4291"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:paddingTop="16dp">

                    <Button
                        android:id="@+id/btnNotNow"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@null"
                        android:text="@string/not_now"
                        android:textAllCaps="true"
                        android:textColor="@color/dialog_blue"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnContinue"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:background="@drawable/rectagle_blue"
                        android:text="@string/btn_continue"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/cardCenter">

            <co.siempo.phone.customviews.RobotoMediumTextView
                android:id="@+id/we_respect_"
                android:layout_width="273dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="5sp"
                android:text="@string/we_respect_your_privacy_and_do_not_tolerate_spam_your_email_allows_us_to_send_occassional_important_announcements_about_your_account_we_will_never_sell_or_give_away_your_email_to_any_third_party"
                android:textColor="#8A000000"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/we_respect_"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <co.siempo.phone.customviews.RobotoMediumTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="5sp"
                    android:text="@string/learn_more_on_our"
                    android:textColor="#8A000000"
                    android:textSize="14sp" />

                <co.siempo.phone.customviews.RobotoMediumTextView
                    android:id="@+id/txtPrivacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="5sp"
                    android:text="@string/privacypolicy"
                    android:textColor="@color/dialog_blue"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>