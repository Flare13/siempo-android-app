<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pauseLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.siempo.phone.pause.PauseActivity">

    <ImageView
        android:id="@+id/imgBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/pause_background"
        android:contentDescription="@null"
        android:visibility="invisible"/>
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:elevation="8dp"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/titleActionBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#de000000"
                android:layout_centerInParent="true"
                android:fontFamily="sans-serif-medium"
                android:text="Activities"/>

            <ImageView
                android:id="@+id/crossActionBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/abc_ic_ab_back_material"
                android:layout_marginTop="20dp"
                android:contentDescription="@null"
                android:layout_alignBottom="@+id/titleActionBar"
                android:layout_alignParentStart="true" />


        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

      <TextView
        android:id="@+id/txtRemainingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:layout_marginTop="105dp"
        android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true"
          android:textColor="@color/white"
        tools:text="30 minute" />

    <com.jesusm.holocircleseekbar.lib.HoloCircleSeekBar
        android:layout_centerInParent="true"
        android:id="@+id/seekbar"
        android:layout_width="285dp"
        android:layout_height="290dp"
        app:max="60"
        app:init_position="15"
        app:pointer_color="@color/white"
        app:pointer_halo_color="@color/pointerHalo"
        app:pointer_size="20dp"
        app:title_color="@color/text.primary"
        app:title_size="90sp"
        app:subTitle_color="@color/text.secondary"
        app:subTitle_size="14sp"
        app:show_title="true"
        app:text_size="24sp"
        app:text_color="@color/white"
        app:thumb_image="@drawable/control_dial_handle"
        app:thumb_size="32dp"
        app:wheel_active_color="@color/pauseSeekBarActive"
        app:wheel_unactive_color="@color/pauseSeekBarInactive"/>

    <LinearLayout
        android:id="@+id/endingLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:text="Ending at "
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/txtEndingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="@color/white"
            tools:text="01:00 pm" />
    </LinearLayout>

    <Button
        android:text="REMOVE ACTIVITY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/endingLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:background="@null"
        android:textColor="#212121"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:id="@+id/pause_button" />


</RelativeLayout>
