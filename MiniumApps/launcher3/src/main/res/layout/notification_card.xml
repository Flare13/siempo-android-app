<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="324dp"
    android:layout_height="72dp"
    android:layout_marginTop="7.9dp"
    android:layout_centerHorizontal="true">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:elevation="8dp"
        card_view:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/thumbnail_notification"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@mipmap/ic_launcher"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13.5dp"
                android:layout_marginRight="13.5dp"
                app:civ_fill_color="#42000000"
                app:civ_border_width="0dp"
                app:civ_border_color="#42000000"/>

            <TextView
                android:id="@+id/text_name_notification"
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="22.5dp"
                android:layout_marginTop="13.5dp"
                android:layout_toRightOf="@+id/thumbnail_notification"
                tools:text="Jaineel shah"
                android:textSize="14sp"
                android:textColor="#de000000"/>

            <TextView
                android:id="@+id/text_mesage_notification"
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="22.5dp"
                android:layout_below="@+id/text_name_notification"
                android:layout_toRightOf="@+id/thumbnail_notification"
                android:layout_marginBottom="13.5dp"
                tools:text="Haha. Sure ! :-)"
                android:textColor="#8b000000"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="14sp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="27dp"
                android:layout_marginBottom="9dp"
                android:layout_marginRight="12.9dp"
                android:layout_marginLeft="9.6dp"
                android:id="@+id/text_time_notification"
                android:textSize="12sp"
                android:textColor="#8a000000"
                tools:text="12:52 pm"/>

            <ImageView
                android:id="@+id/image_checked_notification"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_centerInParent="true"
                android:visibility="invisible"
                android:src="@drawable/check" />

        </RelativeLayout>

        </android.support.v7.widget.CardView>
</LinearLayout>