<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.eyeem.chips.ChipsEditText
        android:id="@+id/txtSearchBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="54dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:lines="3"
        android:minLines="1"
        android:maxLines="3"
        android:scrollbars="none"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:textSize="@dimen/text.size.medium"
        android:textColor="@color/text.primary"
        android:alpha=".78"
        android:inputType="textCapSentences|textMultiLine|textAutoCorrect"
        android:hint="What's your intention?"
        android:gravity="start|center_vertical"
        tools:background="@color/material.core.blue"
        />


    <ImageView
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="4dp"
        android:paddingEnd="8dp"
        android:src="@drawable/icon_clear_field"
        android:layout_gravity="center_vertical"
        android:contentDescription="@null" />

</LinearLayout>