<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.eyeem.chips.ChipsEditText
        android:id="@+id/txtSearchBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:lines="3"
        android:minLines="1"
        android:maxLines="3"
        android:scrollbars="none"
        android:padding="8dp"
        android:ellipsize="start"
        android:textSize="@dimen/text.size.medium"
        android:textColor="@color/text.primary"
        android:alpha=".78"
        android:inputType="textCapSentences|textMultiLine|textAutoCorrect"
        android:hint="What's your intention?"
        android:layout_gravity="center_vertical"
        android:gravity="start|center_vertical"
        tools:background="@color/material.core.blue"
        />


    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="{fa-times-circle @color/colorAccent 20dp}"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:layout_gravity="center_vertical"
        />

</LinearLayout>