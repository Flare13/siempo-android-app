<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/margin.1"
    android:paddingRight="@dimen/margin.1"
    tools:context=".ui.TopFragment">

    <ImageView
        android:id="@+id/imgNotification"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:padding="4dp"
        android:src="@drawable/system_notification"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imgTempo"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/imgNotification"
        android:contentDescription="@null"
        android:padding="4dp"
        android:src="@drawable/system_tempo"
        android:visibility="visible"
        tools:ignore="UnusedIds" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        tools:ignore="RelativeOverlap">

        <ImageView
            android:id="@+id/imgAirplane"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:padding="4dp"
            android:src="@drawable/ic_airplane"
            tools:ignore="UnusedIds" />

        <ImageView
            android:id="@+id/imgBluetooth"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:padding="4dp"
            android:src="@drawable/ic_bluetooth_on"
            tools:ignore="UnusedIds" />

        <ImageView
            android:id="@+id/imgDND"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:padding="4dp"
            android:src="@drawable/ic_sound_vibrate"
            tools:ignore="UnusedIds" />

        <ImageView
            android:id="@+id/imgWifi"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:padding="4dp"
            android:src="@drawable/ic_wifi_0" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:layout_alignTop="@+id/imgSignal"
                android:layout_alignBottom="@+id/imgSignal"
                android:gravity="center|top"
                android:paddingTop="@dimen/dp_3"
                android:maxLength="4"
                android:layout_alignParentLeft="true"
                android:text=""
                android:textColor="@color/action_bar_bg"
                android:textSize="@dimen/sp_10"
                android:visibility="visible" />

            <ImageView
                android:layout_toRightOf="@+id/txtType"
                android:id="@+id/imgSignal"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="center"
                android:layout_marginRight="-5dp"
                android:contentDescription="@null"
                android:padding="4dp"
                android:src="@drawable/ic_signal_0"
                tools:ignore="NegativeMargin" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imgBattery"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:padding="4dp"
            android:src="@drawable/ic_battery_10" />

        <TextClock
            android:id="@+id/iTxt2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:textColor="#b3000000"
            android:textSize="@dimen/text.size.medium"
            tools:ignore="RelativeOverlap,UnusedIds"
            tools:text="SELECT" />
    </LinearLayout>
</RelativeLayout>
