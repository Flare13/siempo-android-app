<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pauseLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.minium.launcher3.pause.PauseActivity">

    <ImageView
        android:id="@+id/imgBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/pause_background"
        android:contentDescription="@null"
        android:visibility="visible"/>
    <include
        android:id="@+id/included"
        layout="@layout/custom_toolbar_with_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


      <TextView
        android:id="@+id/txtRemainingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:fontFamily="sans-serif"
        android:layout_marginTop="105dp"
        android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true"
          android:textColor="@color/white"
          android:text="7:00 AM  -  7:15 AM" />

    <com.jesusm.holocircleseekbar.lib.HoloCircleSeekBar
        android:layout_centerInParent="true"
        android:id="@+id/seekbar"
        android:layout_width="285dp"
        android:layout_height="290dp"
        app:max="60"
        app:init_position="15"
        app:pointer_color="@color/white"
        app:pointer_halo_color="@color/pointerHalo"
        app:pointer_size="20dp"
        app:title_color="@color/text.primary"
        app:title_size="90sp"
        app:subTitle_color="@color/text.secondary"
        app:subTitle_size="14sp"
        app:show_title="true"
        app:text_size="24sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:text_color="@color/white"
        app:wheel_active_color="@color/pauseSeekBarActive"
        app:wheel_unactive_color="@color/pauseSeekBarInactive"/>

    <LinearLayout
        android:id="@+id/endingLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="70sp"
            android:fontFamily="sans-serif"
            android:text="..."
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/pause_button"
        android:layout_width="22.5dp"
        android:layout_height="31.5dp"
        android:layout_alignBottom="@+id/endingLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="69dp"
        android:layout_weight="1"
        android:background="@null"
        android:fontFamily="sans-serif-medium"
        android:src="@drawable/control_pause"
        android:textColor="#212121"
        android:textSize="14sp" />


</RelativeLayout>
