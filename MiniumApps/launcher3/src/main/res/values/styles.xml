<resources>

    <!-- Base application theme. -->
    <style name="SiempoAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:colorPrimaryDark">@color/layout_bg</item>-->
        <item name="android:colorControlHighlight">@color/colorAccent</item>
        <item name="android:windowBackground">@color/layout_bg</item>
        <!-- enable overlapping of exiting and entering activities-->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="popupMenuStyle">@style/interrupt_popup_menu</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="FullScreenDialogStyle" parent="SiempoAppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@style/TempoDialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="MaterialDialogSheet" parent="@style/Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/MaterialDialogSheetAnimation</item>
    </style>

    <style name="MaterialDialogSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="TempoDialog">
        <item name="android:windowEnterAnimation">@anim/slide_in_tempo_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_tempo_dialog</item>
    </style>

    <style name="ListItem">
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:paddingLeft">@dimen/margin.6</item>
        <item name="android:paddingRight">@dimen/margin.6</item>
    </style>

    <!--<style name="WheelDemoTheme.Light" parent="android:Theme.Light">-->
    <!--</style>-->
    <!--<style name="WheelDemoTheme" parent="android:Theme">-->
    <!--</style>-->


    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/errorColor</item>
        <item name="android:textSize">12sp</item>

    </style>

    <style name="interrupt_popup_menu" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:dropDownHorizontalOffset">-8dp</item>
        <item name="android:dropDownVerticalOffset">12dp</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/dialog_title</item>
        <item name="android:textColorPrimary">@color/dialog_message</item>
    </style>

    <style name="AlertDialogThemeChangeLauncher" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/dialog_title</item>
        <item name="android:textColorPrimary">@color/appland_date</item>
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:colorForeground">@android:color/primary_text_dark</item>
    </style>

    <!-- Base application theme. -->
    <style name="CoreTheme" parent="BaseTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorButtonNormal">@color/white</item>
        <item name="android:textColorPrimary">@color/text.primary</item>
        <item name="android:textColorSecondary">@color/text.secondary</item>
    </style>


    <style name="feedbackDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">#A3A3A3</item>
    </style>


</resources>
