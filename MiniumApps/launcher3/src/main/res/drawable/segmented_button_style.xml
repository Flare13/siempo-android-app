<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" tools:ignore="UnusedResources">

    <item android:state_activated="true">

    </item>

    <item android:state_pressed="true" android:state_focused="false">
        <shape>
            <stroke android:width="4dp" android:color="#1f000000" />
            <corners android:radius="@dimen/margin.2" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_focused="true">
        <shape>
            <stroke android:width="4dp" android:color="#1f000000" />
            <corners android:radius="@dimen/margin.2" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_focused="false">
        <shape>
            <solid android:color="@color/white" />
            <stroke android:width="4dp" android:color="#1f000000" />
            <corners android:radius="@dimen/margin.2" />
        </shape>
    </item>
</selector>