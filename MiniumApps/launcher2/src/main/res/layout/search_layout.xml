<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.eyeem.chips.ChipsEditText
        android:id="@+id/txtSearchBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:lines="2"
        android:maxLines="3"
        android:padding="8dp"
        android:ellipsize="start"
        android:textSize="@dimen/text.size.large"
        android:textColor="@color/white"
        android:alpha=".78"
        android:lineSpacingMultiplier="1.3"
        android:inputType="textCapSentences|textMultiLine|textAutoCorrect"
        android:hint="Make a selection"
        android:layout_gravity="center_vertical"
        android:gravity="start"
        tools:background="@color/material.core.blue"
        />


    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="{fa-times-circle @color/text.hint 24dp}"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:layout_gravity="center_vertical"
        />

</merge>