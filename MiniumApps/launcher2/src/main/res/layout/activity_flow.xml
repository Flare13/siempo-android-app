<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="minium.co.launcher2.flow.FlowActivity">

    <FrameLayout
        android:id="@+id/statusView"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        tools:background="@color/material.core.red"/>

    <minium.co.launcher2.ui.widget.VerticalProgressBar
        android:id="@+id/vpBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusView"
        app:vpb_flat="true" />

    <TextView
        android:id="@+id/txtTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusView"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/text.size.regular"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/txtRemainingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/text.size.5xl"
        android:layout_centerInParent="true"/>

</RelativeLayout>