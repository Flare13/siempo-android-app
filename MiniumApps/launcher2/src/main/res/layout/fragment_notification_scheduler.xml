<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="minium.co.launcher2.notificationscheduler.NotificationSchedulerFragment">

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switchSuppressCalls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="@dimen/margin.2"
        android:text="Suppress Calls"
        android:padding="@dimen/margin.2"
        app:switchPadding="@dimen/margin.2"
        android:checked="true"/>


    <NumberPicker
        android:id="@+id/valPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/txtMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text.size.medium"
        tools:text="Hello world"
        android:gravity="center"/>

</LinearLayout>
